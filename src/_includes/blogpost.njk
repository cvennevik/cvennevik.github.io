{% block main %}
<style>
    h1 {
        margin-block-start: 0;
    }
</style>
<article>
    <h1>{{ title }}</h1>
    <i>{{ date.toLocaleString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) }}</i>
    {{ content | safe }}
</article>
{% endblock %}