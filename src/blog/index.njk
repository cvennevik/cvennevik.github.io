---
layout: page.njk
title: Blog
eleventyExcludeFromCollections: true
---

<header class="page-header">
    <h1>Blog</h1>
</header>
{% for post in collections.blogposts | reverse %}
    <article class="post-preview">
        <a href="{{ post.url }}">
            <h2>{{ post.data.title }}</h2>
        </a>
        <span class="post-meta">{{ post.date | renderFullDate }}</span>
        <div>
            {{ post | renderBlogPostSummary | safe }}
        </div>
    </article>
{% endfor %}