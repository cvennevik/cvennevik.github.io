<style>
    h1 {
        text-align: center;
    }
</style>
<h1>Blog</h1>
{% for post in collections.blogposts | reverse %}
    <article>
        <a href="{{ post.url }}">
            <h2>{{ post.data.title }}</h2>
        </a>
        <i>{{ post.date.toLocaleString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) }}</i>
    </article>
{% endfor %}