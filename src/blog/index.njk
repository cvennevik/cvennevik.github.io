---
layout: page.njk
title: Blog
eleventyExcludeFromCollections: true
---

<style>
    h1 {
        text-align: center;
    }
</style>
<h1>Blog</h1>
{% for post in collections.blogposts | reverse %}
    <article>
        <a href="{{ post.url }}">
            <h2>{{ post.data.title }}</h2>
        </a>
        <i>{{ post.date | renderFullDate }}</i>
        {{ post | renderBlogPostSummary | safe }}
    </article>
{% endfor %}